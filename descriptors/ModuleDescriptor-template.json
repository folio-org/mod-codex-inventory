{
  "id": "${artifactId}-${version}",
  "name": "Codex wrapper for Inventory",
  "requires": [
    {
      "id": "instance-storage",
      "version": "7.0"
    },
    {
      "id": "contributor-name-types",
      "version": "1.0"
    },
    {
      "id": "instance-types",
      "version": "1.0 2.0"
    },
    {
      "id": "instance-formats",
      "version": "1.0 2.0"
    },
    {
      "id": "identifier-types",
      "version": "1.0"
    },
    {
      "id": "locations",
      "version": "2.1 3.0"
    }
  ],
  "provides": [
    {
      "id": "codex",
      "version": "3.2",
      "interfaceType": "multiple",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/codex-instances"
        },
        {
          "methods": ["GET"],
          "pathPattern": "/codex-instances/{id}"
        }
      ]
    }
  ],
  "metadata": {
    "containerMemory": "256",
    "databaseConnection": "false"
  },
  "permissionSets": [],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 357913941,
        "PortBindings": { "8081/tcp": [ { "HostPort": "%p" } ] }
      }
    },
    "env": [
      { "name": "JAVA_OPTIONS",
        "value": "-XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap"
      }
    ]
  }
}
